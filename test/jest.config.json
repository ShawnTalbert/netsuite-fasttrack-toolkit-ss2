{
  "automock": false,
  "testEnvironment": "node",
  "clearMocks": true,
  "moduleDirectories": [
    "node_modules"
  ],
  "transform": {
    "^.+\\.(ts)$": [
      "ts-jest",
      {
        "tsconfig": "test/tsconfig.json"
      }
    ]
  },
  "moduleNameMapper": {
    "NFT/(.*)": "../$1",
    "N/(.*)": "<rootDir>/../__mocks__/N/$1",
    "./moment": "moment",
    "./aurelia-logging": "aurelia-logging",
    "./lodash": "lodash"
  },
  "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(tsx?)$",
  "testPathIgnorePatterns": [
    "/integration/"
  ],
  "preset": "ts-jest"
}

